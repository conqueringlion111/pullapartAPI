<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Regression Suite" parallel="methods" thread-count="3">

    <listeners>
        <listener class-name="com.pullapart.api.listeners.TestListener"/>
    </listeners>

    <test name="API Tests">
        <groups>
            <define name="regression">
                <include name="location"/>
                <include name="search"/>
                <include name="used_cars"/>
            </define>

            <define name="smoke">
                <include name="search"/>
            </define>

            <run>
                <include name="regression"/>
            </run>
        </groups>

        <packages>
            <package name="com.pullapart.api.tests"/>
        </packages>
    </test>

</suite>